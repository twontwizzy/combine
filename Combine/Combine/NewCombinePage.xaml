<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Combine.NewCombinePage">

    
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Add a New Combine" 
            Style="{DynamicResource TitleStyle}"
               Margin="0, 20"
               HorizontalTextAlignment="Center" />
            <Label Text="Combine Date"/>
            <DatePicker x:Name="txtCombineDate" Format="D"/>
            <Entry x:Name="txtCombineName" Placeholder="Combine Name" />
            <Button x:Name="btnSave" Text="Save" 
                    Clicked="btnSave_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>