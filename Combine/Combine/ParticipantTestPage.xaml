<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Combine.ParticipantTestPage">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Combine Test" 
           VerticalOptions="Start" 
           HorizontalOptions="Center"
           TextColor="Black" Font="Bold, 20" />
            <ListView x:Name="TestList">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="{Binding Test}" TextColor="Black" Font="Bold, 20" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>
                                <Entry Text="{Binding Result}" WidthRequest="50" Keyboard="Numeric" HeightRequest="50"/>
                                <Label Text="{Binding Measurement}" TextColor="Black"/>

                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button x:Name="btnSave" Clicked="btnSave_Clicked" Text="Save"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>